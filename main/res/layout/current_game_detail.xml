<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sp.pulse.CurrentGameDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/game_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/background_material_light"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:background="#800000"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp" />

                <ImageView
                    android:id="@+id/game_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#800000"
                    android:padding="1dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_menu_material"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/game_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/abc_text_size_body_1_material" />

            <TextView
                android:id="@+id/game_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/abc_text_size_body_1_material" />

            <TextView
                android:id="@+id/ticket_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/abc_text_size_body_1_material" />

            <TextView
                android:id="@+id/ticket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/abc_text_size_body_1_material" />

            <TextView
                android:id="@+id/health_pulse_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/abc_text_size_body_1_material" />

            <Space
                android:layout_width="20px"
                android:layout_height="40px" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="PHOTO &amp; VIDEOS SHARED"
                android:textSize="@dimen/abc_text_size_menu_material"
                android:layout_gravity="center"
                android:background="@color/bright_foreground_material_light"
                android:textColor="@color/bright_foreground_inverse_material_light"
                android:gravity="center"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/photo_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <WebView
                android:id="@+id/video_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
